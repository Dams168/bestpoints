<% layout('layouts/app') %>
<h1>Edit Place <%= place.title %></h1>
<form action="/place/<%= place._id %>/update?_method=put" method="POST">
  <div>
    <label for="title">Title :</label>
    <input
      type="text"
      name="place[title]"
      id="title"
      value="<%= place.title %>"
    />
  </div>
  <div>
    <label for="location">Location :</label>
    <input
      type="text"
      name="place[location]"
      id="location"
      value="<%= place.location %>"
    />
  </div>
  <div>
    <label for="price">Price :</label>
    <input
      type="text"
      name="place[price]"
      id="price"
      value="<%= place.price %>"
    />
  </div>

  <button type="submit">Submit</button>
</form>
