<% layout('layouts/app') %>
<h1 class="text-3xl font-bold text-gray-800 mb-8">All Places</h1>

<div
  class="my-4 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8"
>
  <% places.forEach((place) => { %>
  <div
    class="w-full max-w-sm bg-gray-900 border border-gray-700 rounded-lg shadow"
  >
    <a href="#">
      <img
        class="p-8 rounded-t-lg"
        src="<%= place.image %>"
        alt="product image"
      />
    </a>
    <div class="px-5 pb-5">
      <a href="#">
        <h5 class="text-xl font-semibold tracking-tight text-gray-100">
          <%= place.title %>
        </h5>
      </a>
      <p class="mt-2 text-sm text-gray-400"><%= place.location %></p>
      <div class="flex items-center justify-between mt-4">
        <span class="text-3xl font-bold text-gray-100"
          >Rp. <%= place.price %></span
        >
        <a
          href="/place/<%= place._id %>"
          class="text-white bg-indigo-600 hover:bg-indigo-700 focus:ring-4 focus:outline-none focus:ring-indigo-400 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
          >Show</a
        >
      </div>
    </div>
  </div>
  <% }); %>
</div>
